		<script>
			// hide unhide password 
			function hideUnhide1() {
				var x = document.getElementById("user-password1");
				var y = document.getElementById("hideEye1");
				var z = document.getElementById("hideEye2");

				if (x.type === 'password') {
					x.type = "text";
					y.style.display = "inline-block";
					z.style.display = "none";
				} else {
					x.type = "password";
					y.style.display = "none";
					z.style.display = "inline-block";
				}
			}

			function hideUnhide2() {
				var x = document.getElementById("user-password2");
				var y = document.getElementById("hideEye3");
				var z = document.getElementById("hideEye4");

				if (x.type === 'password') {
					x.type = "text";
					y.style.display = "inline-block";
					z.style.display = "none";
				} else {
					x.type = "password";
					y.style.display = "none";
					z.style.display = "inline-block";
				}
			}

			function hideUnhide3() {
				var x = document.getElementById("user-password3");
				var y = document.getElementById("hideEye5");
				var z = document.getElementById("hideEye6");

				if (x.type === 'password') {
					x.type = "text";
					y.style.display = "inline-block";
					z.style.display = "none";
				} else {
					x.type = "password"
					y.style.display = "none";
					z.style.display = "inline-block";
				}
			}
		</script>