              function addEventListenerWrapper(type, listener) {
                if (type == "keydown") {
                  var orig_listener = listener;
                  listener = function (event) {
                    var suggestion_selected = $("#work-loc-selected").length > 0;
                    if (event.which == 38 || event.which == 40) {
