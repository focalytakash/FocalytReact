 <section class="list-view">
          <div class="row">
            <div class="col-xl-12">
              <div class="card">
                <div class="card-header border border-top-0 border-left-0 border-right-0">
                  <h4 class="card-title pb-1">App Updates</h4>
                </div>
                <div class="card-content">
                  <div class="card-body">
                        <form class="form-horizontal" action="" method="post">
                            <div class="row">
                                <div class="col-xl-3 mb-1">
                                    <label>Title</label>
                                    <input type="text" class="form-control" name="title" value="<%- title ? title : ''%>" required>
                                </div>
                                <div class="col-xl-3 mb-1">
                                    <label>Date</label>
                                    <% const dd = (date && date !== '') ? date : '' %>
                                    <input type="date" class="form-control"  value="<%- dd ? dd : ''%>" name="date" required>
                                </div>
                                <div class="col-xl-3 mb-1">
                                    <div class="form-group">
                                        <label>Deeplinking</label>
                                        <select class="form-control" name="deeplinking" required>
