                                        <% if (deeplinking === 0) { %>
                                            <option value="0" selected>No</option>
                                            <option value="1">Company</option>
                                            <option value="2">Jobs</option>
                                            <option value="3">Skill Test</option>
                                            <option value="4">Mock Interview</option>
                                        <% } else if (deeplinking === 1) { %>
                                            <option value="0">No</option>
                                            <option value="1" selected>Company</option>
                                            <option value="2">Jobs</option>
                                            <option value="3">Skill Test</option>
                                            <option value="4">Mock Interview</option>
                                        <% } else if (deeplinking === 2) { %>
                                            <option value="0">No</option>
                                            <option value="1">Company</option>
                                            <option value="2" selected>Jobs</option>
                                            <option value="3">Skill Test</option>
                                            <option value="4">Mock Interview</option>
                                        <% } else if (deeplinking === 3) { %>
                                            <option value="0">No</option>
                                            <option value="1">Company</option>
                                            <option value="2">Jobs</option>
                                            <option value="3" selected>Skill Test</option>
                                            <option value="4">Mock Interview</option>
                                        <% } else if (deeplinking === 4) { %>
                                            <option value="0">No</option>
                                            <option value="1">Company</option>
                                            <option value="2">Jobs</option>
                                            <option value="3">Skill Test</option>
                                            <option value="4" selected>Mock Interview</option>
                                        <% } else { %>
                                            <option value="0">No</option>
                                            <option value="1">Company</option>
                                            <option value="2">Jobs</option>
                                            <option value="3">Skill Test</option>
                                            <option value="4">Mock Interview</option>
                                        <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-3 mb-1">
                                    <div class="form-group">
                                        <label>Qualifications</label>
                                        <select class="selectpicker form-control" title="Select Qualification" data-actions-box="true" multiple required name="_qualification">
                                        <% qualification.forEach((i) => { %>
                                            <% if (_qual.indexOf(i._id.toString()) > -1) { %>
                                            <option value="<%= i._id %>" class="text-capitalize" selected><%= i.name %></option>
                                            <% } else { %>
                                            <option value="<%= i._id %>" class="text-capitalize"><%= i.name %></option>
                                            <% } %>
                                        <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-3">
                                    <label>Country</label>
                                    <select class="form-control" name="countryId" id="country" required>
                                        <option>Select Option</option>
                                        <% countryData.forEach((i) => { %>
                                            <% if (country === i.countryId) { %>
                                                <option value="<%= i.countryId %>" class="text-capitalize" selected><%= i.name %></option>
                                            <% } else { %>
                                                <option value="<%= i.countryId %>" class="text-capitalize"><%= i.name %></option>
                                            <% } %>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="col-xl-3">
                                    <label>State</label>
                                    <select class="form-control" name="stateId" id="state" required>
                                        <option>Select Option</option>
                                        <% stateData.forEach((i) => { %>
                                            <% if (state === i.stateId) { %>
                                                <option value="<%= i.stateId %>" class="text-capitalize" selected><%= i.name %></option>
                                            <% } else { %>
                                                <option value="<%= i.stateId %>" class="text-capitalize"><%= i.name %></option>
                                            <% } %>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="col-xl-3">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <label>Experince From</label>
                                            <select class="form-control" name="expStart" required>
                                                <option>Select Option</option>
                                                <% for (let i = 0; i <= 20; i++) { %>
                                                    <% if (expStart === i.toString()) { %>
                                                        <option value="<%= i %>" class="text-capitalize" selected><%= i %></option>
                                                    <% } else { %>
                                                        <option value="<%= i %>" class="text-capitalize"><%= i %></option>
                                                    <% } %>
                                                <% }; %>
                                            </select>
                                        </div>
                                        <div class="col-xl-6">
                                            <label>Experince To</label>
                                            <select class="form-control" name="expEnd" required>
                                                <option>Select Option</option>
                                                <% for (let i = 0; i <= 30; i++) { %>
                                                    <% if (expEnd === i.toString()) { %>
                                                        <option value="<%= i %>" class="text-capitalize" selected><%= i %></option>
                                                    <% } else { %>
                                                        <option value="<%= i %>" class="text-capitalize"><%= i %></option>
                                                    <% } %>
                                                <% }; %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 mb-1">
                                    <label>Select Image</label>
                                    <div class="row" id="image">
                                        <% const clas = (image && image !== '') ? 'd-none' : ''; %>
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-1 firstImage <%= clas %>">
                                        <div class="image-upload">
                                        <label for="filestwo">
                                            <img src="/images/add_receipt.png" width="60" height="60" id="outputtwo">
                                            <p class="mt-1">Click to upload image</p>
                                        </label>
                                        <input id="filestwo" data-id="image" type="file" name="filecar"
                                            class="my-logo-uploader form-control" />
                                        </div>
                                    </div>
                                    <% if (image && image !== '') { %>
                                        <div class="col-xl-12 col-md-12 col-sm-6 col-12 mt-1">
                                        <img src="https://mmt-alls-1.s3.ap-south-1.amazonaws.com/<%= image %>" width="80" />
                                        <input type="hidden" name="image" value="<%= image %>" />
                                        <p class="mt-1">
                                            <a class="removediv text-danger" href="javascript:void(0)">Remove</a>
                                            <a class="text-primary mr-2" target="_blank"
                                            href="https://mmt-alls-1.s3.ap-south-1.amazonaws.com/<%= image %>">View</a>
                                        </p>
                                        </div>
                                    <% } %>
                                    </div>
                                </div>
                                <div class="col-xl-3">
                                    <label>Message</label>
                                    <textarea cols="4" rows="4" class="form-control" placeholder="Type your Message Here" name="message"><%- message ? message : ''; %></textarea>
                                </div>
                                <div class="col-xl-12 my-auto text-right">
                                    <% if (title && title !== '') { %>
                                        <button type="submit" class="btn btn-success font-small-3">Update</button>
                                    <% } else { %>
                                        <button type="submit" class="btn btn-success font-small-3">Add</button>
                                    <% } %>
                                </div>
                            </div>
                        </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xl-12">
                <div class="card">
                    <div class="row p-1">
                        <div class="col-xl-12">
                        <div class="row">
                            <div class="card-header">
                            <h4 class="card-title">All App Updates</h4>
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <% if (appUpdates && appUpdates.length > 0) { %>
                        <table class="table table-hover-animation mb-0 table-hover">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Date</th>
                                <th>Deeplink</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% appUpdates.forEach((l, i) => { %>
                            <tr>
                                <td><%= l.title %></td>
                                <% if (l.image && l.image !== '') { %>
                                    <td><img src="https://mmt-all.s3.ap-south-1.amazonaws.com/<%= l.image %>" width="80"></td>
                                <% } else { %>
                                    <td>No Image</td>
                                <% } %>
                                <% const dd = moment(l.date).format('DD-MM-YYYY') %>
                                <td><%= dd %></td>
                                <td>
                                    <% if (l.deeplinking === 0) { %>
                                        NO
                                    <% } else if (l.deeplinking === 1) { %>
                                        Company
                                    <% } else if (l.deeplinking === 2) { %>
                                        Jobs
                                    <% } else if (l.deeplinking === 3) { %>
                                        Skill Test
                                    <% } else { %>
                                        Mock Interview
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/admin/appUpdate/edit/<%= l._id %>">
                                        <i class="feather icon-edit fa-lg primary"></i>
                                    </a>
                                    <div class="custom-control custom-switch custom-control-inline">
                                    <% if(l.status) { %>
                                        <input type="checkbox" onclick="myOnOffFunc('<%= l._id %>', '<%= l.status %>', 'appUpdate');" class="custom-control-input" id="customSwitch<%= i %>" checked>
                                        <label class="custom-control-label" for="customSwitch<%= i %>">
                                        </label>
                                        <% } else { %>
                                        <input type="checkbox" onclick="myOnOffFunc('<%= l._id %>', '<%= l.status %>', 'appUpdate');" class="custom-control-input" id="customSwitch<%= i %>">
                                        <label class="custom-control-label" for="customSwitch<%= i %>">
                                        </label>
                                    <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <p class="text-center mt-3">No result found</p>
                            <% } %>
            
                            <% if (totalPages > 1) { %>
                            <ul class="pagination justify-content-end ml-2 mb-2">
                                <% let first = 1 %>
                                <% let last = totalPages > 4 ? 4 : totalPages %>
                                <% if (totalPages > 4 && page >= 2) { %>
                                <% first = page - 1 %>
                                <% last = page + 1 %>
                                <% if (last > totalPages) last = totalPages %>
                                <% } %>
                                <% if (first > 1) { %>
                                <li class="page-item"><a class="pageAnchor page-link" href="<%= 1 %>">First</a></li>
                                <% } %>
                                <% for (let i = first; i <= last; i += 1) { %>
                                    <% if (i === page) { %>
                                    <li class="active page-item"><a href="javascript:void()" class="page-link"><%= i %></a></li>
                                    <% } else { %>
                                    <li class="page-item"><a class="page-link pageAnchor" href="<%= i %>"><%= i %></a></li>
                                    <% } %>
                                <% } %>
                                <% if (totalPages > last) { %>
                                    <li class="page-item"><a class="pageAnchor page-link" href="<%= last + 1 %>">...</a></li>
                                    <li class="page-item"><a class="pageAnchor page-link" href="<%= totalPages %>">Last</a></li>
                                <% } %>
                            </ul>
                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </section>
<% include ./partials/footer %>
