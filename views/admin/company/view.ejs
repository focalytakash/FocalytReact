				<section id="personal-info">
					<div class="row">
						<div class="col-xl-12 col-lg-12">
							<div class="card">
								<div class="card-header border border-top-0 border-left-0 border-right-0">
									<h4 class="card-title pb-1">Company Details</h4>
								</div>
								<div class="card-content">
									<div class="card-body">
										<div class="row">
											<div class="col-xl-3 mb-1">
												<label>Company Name
												</label>
												<input type="text" class="form-control" required name="companyName"
													palaceholder="Company Name"
													value="<%- company.name ? company.name : ''; %>"
													pattern="[a-zA-Z0-9]+[^0-9]" maxlength="50" readonly />
											</div>
											<div class="col-xl-3 mb-1">
												<label>Industry
												</label>
												<select style="cursor: pointer;" class="form-control text-capitalize" required
													name="_industry" id="industry">
													<option disabled value="" disabled>
														Select Option
													</option>
													<% industry.forEach((i)=> { %> <% if
															(i._id.toString()===company._industry?._id.toString()) { %>
															<option value="<%= i._id %>" selected disabled>
																<%= i.name %>
															</option>
															<% } else { %>
																<option value="<%= i._id %>" disabled>
																	<%= i.name %>
																</option>
																<% } %>
																	<% }); %>
												</select>
											</div>
											
											<div class="col-xl-3 mb-1">
												<label>Email </label>
												<input type="email" readonly class="form-control"
													value="<%- company.email ? company.email : ''; %>" required
													name="companyEmail" readonly />
											</div>
											<div class="col-xl-3 mb-1">
												<label>Linkedin</label>
												<input type="text" class="form-control" name="linkedin"
													value="<%- company.linkedin ? company.linkedin : ''; %>"
													maxlength="50" readonly />
											</div>
										</div>
										<div class="row">
											<div class="col-xl-3 mb-1">
												<label>Twitter</label>
												<input type="text" class="form-control" name="twitter"
													value="<%- company.twitter ? company.twitter : ''; %>"
													maxlength="50" readonly />
											</div>
											<div class="col-xl-3 mb-1">
												<label>FaceBook</label>
												<input type="text" class="form-control" name="facebook"
													value="<%- company.facebook ? company.facebook : ''; %>"
													maxlength="50" readonly />
											</div>
											<div class="col-xl-3 mb-1">
												<label>Country </label>
												<select style="cursor: pointer;" class="form-control" name="countryId"
													id="country" required>
													<option disabled>Select Option</option>
													<% country.forEach((i)=> { %> <% if
															(i.countryId.toString()===company.countryId?.toString()) { %>
															<option value="<%= i.countryId %>" selected disabled>
																<%= i.name %>
															</option>
															<% } else { %>
																<option value="<%= i.countryId %>" disabled>
																	<%= i.name %>
																</option>
																<% } %>

