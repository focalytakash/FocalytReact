<% include ../partials/header %>
	<div class="content-header row d-xl-block d-lg-block d-md-none d-sm-none d-none">
		<div class="content-header-left col-md-9 col-12 mb-2">
			<div class="row breadcrumbs-top">
				<div class="col-12">
					<h3 class="content-header-title float-left mb-0">Upload Video</h3>
					<div class="breadcrumb-wrapper col-12">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/admin">Home</a></li>
							<li class="breadcrumb-item active">Add Youtube Video</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="content-body">
		<% include ../../partials/flash %>
			<form class="form-horizontal" action="/admin/uploadedVideos/addOrEditVideo/<%= video?._id %>" method="post" id="formData">
				<section>
					<div class="row">
						<div class="col-xl-12 col-lg-12">
							<div class="card">
								<div class="card-header border border-top-0 border-left-0 border-right-0">
									<h4 class="card-title pb-1">Youtube Gallery</h4>
								</div>
								<div class="card-content">
									<div class="card-body">
										<div class="row">
											<div class="col-xl-3 mb-1">
												<label>Title
													<span class="asterisk">*</span></label>
												<input type="text" class="form-control" required name="title"
													value='<%= video?.title  %>' />
											    <input type="hidden" name="forCandidates" value="true">
											</div>
											<div class="col-xl-3 mb-1">
												<label>Description
													<span class="asterisk">*</span></label>
												<textarea class="form-control" required name="description"
												 rows="1" col="1"><%= video?.description %></textarea>
											</div>
                                            <div class="col-xl-3 mb-1">
                                                <label>Embed URL
													<span class="asterisk">*</span></label>
												<input type="text" class="form-control" required placeholder="enter your embed url"
													name="embedURL" value='<%= video?.embedURL %>'/>
                                            </div>
                                            <div class="col-xl-3 mt-2">
												<button type="reset" class="btn btn-danger">
                                                    Reset
                                                </button>
                                                <button type="submit submitBtn" class="btn btn-success">
                                                    Save
                                                </button>
											</div>
                                            </div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</section>
                    </form>
    </div>
    <% include ../partials/footer%>