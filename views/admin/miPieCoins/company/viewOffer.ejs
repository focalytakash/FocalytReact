<% include ../../partials/header %>
	<div class="content-header row d-xl-block d-lg-block d-md-none d-sm-none d-none">
		<div class="content-header-left col-md-9 col-12 mb-2">
			<div class="row breadcrumbs-top">
				<div class="col-12">
					<h3 class="content-header-title float-left mb-0">Company Coin Offer</h3>
					<div class="breadcrumb-wrapper col-12">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/admin">Home</a></li>
							<li class="breadcrumb-item active">Company Coin Offer</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="content-body">
		<% include ../../partials/flash %>
			<form class="form-horizontal" id="formData">
				<section>
					<div class="row">
						<div class="col-xl-12 col-lg-12">
							<div class="card">
								<div class="card-header border border-top-0 border-left-0 border-right-0">
									<h4 class="card-title pb-1">Company Coin Offer</h4>
								</div>
								<div class="card-content">
									<div class="card-body">
										<div class="row">
											<div class="col-xl-3 mb-1">
												<label>Display Offer
													<span class="asterisk">*</span></label>
												<input type="text" class="form-control" required name="displayOffer"
													value='<%= offer?.displayOffer %>' readonly/>
											</div>
											<div class="col-xl-3 mb-1">
												<label>Pay Amount
													<span class="asterisk">*</span></label>
												<input type="text" class="form-control" required name="payAmount"
													value='<%= offer?.payAmount %>' readonly/>
											</div><div class="col-xl-3 mb-1">
												<label>Get Coins
													<span class="asterisk">*</span></label>
												<input type="text" class="form-control" required name="getCoins"
													value='<%= offer?.getCoins %>' readonly/>
											</div>
										</div>
										<div class="row">
											<div class="col-xl-3 mb-1">
												<label>Activation Date
													<span class="asterisk">*</span></label>
												<input type="date" class="form-control" required name="activationDate" readonly
													value='<%= offer?.activationDate ? moment(offer.activationDate).utcOffset('+05:30').format('YYYY-MM-DD') : '' %>' />
											</div><div class="col-xl-3 mb-1">
												<label>Active Till
													<span class="asterisk">*</span></label>
												<input type="date" class="form-control" required name="activeTill" readonly
													value='<%= offer?.activeTill ? moment(offer?.activeTill).utcOffset('+05:30').format('YYYY-MM-DD') : '' %>' />
											</div>
                                            <div class="col-xl-3 mb-1">
												<label>Description</label>
												<textarea class="form-control" name="description" cols="3" rows="3" readonly
												 ><%= offer?.description %></textarea>
											</div>
                                            </div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
	</div>
	</form>
	<% include ../../partials/footer %>
		</div>